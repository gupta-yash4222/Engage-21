</head>
<body>

    <nav class="navbar bg-dark rounded-0 d-print-none">
        <div class="text-white"> Engage Video Call </div>
    </nav>

    <div class="container-fluid" id='changePassword'>
        <div class="row">
            <div class="col-12 h2 mt-5 text-center">Sign Up</div>
        </div>
        
        <form id="changePassword-form">
    
            <div class="row mt-2">
                <div class="col-12 text-center">
                    <span class="form-text small text-danger" id='err-msg'></span>
                </div>
    
                <div class="col-12 col-md-4 offset-md-4 mb-3">
                    <label for="email">Email ID</label>
                    <input type="text" id='email' class="form-control rounded-0" placeholder="Email ID" name="email">
                </div>
    
                <div class="col-12 col-md-4 offset-md-4 mb-3">
                    <label for="currentPassword">Current Password</label>
                    <input type="text" id='currentPassword' class="form-control rounded-0" placeholder="Current Password" name="currentPassword">
                </div>
    
                <div class="col-12 col-md-4 offset-md-4 mb-3">
                    <label for="newPassword">New Password</label>
                    <input type="text" id='newPassword' class="form-control rounded-0" placeholder="New Password" name="newPassword">
                </div>
    
                <div class="col-12 col-md-4 offset-md-4 mb-3">
                    <button id='changePassword-button' class="btn btn-block rounded-0 btn-info">Sign Up</button>
                </div>
    
                <div class="col-12 col-md-4 offset-md-4 mb-3" id='signed-up'></div>
            </div>
    
        </form>
    </div>

    <nav class="navbar fixed-bottom bg-dark">
        <div class="text=white">hihi</div>
    </nav>


    <script>
        const form = document.getElementById('changePassword-form')
        form.addEventListener('submit', changePassword)

        async function changePassword(event) {
            event.preventDefault()
            const name = document.getElementById('email').value
            const email = document.getElementById('currentPassword').value
            const password = document.getElementById('newPassword').value

            const result = await fetch('/api/changePassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    email,
                    currentPassword,
                    newPassword
                })
            }).then((res) => res.json())

            if (result.status === 'ok') {
                // everythign went fine
                alert('Success')
            } else {
                alert(result.error)
            }
        }
    </script>

    
</body>
</html>



